@using SushiRestaurant.core
@model Sushi

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.NazwaSushi</h3>
    </div>
    <div class="panel-body">
        <span>Liczba sztuk: @Model.IloscSushi</span>
        <span>Składniki: @Model.Składniki</span>
        <span>Cena w zł: @Model.CenaSushi</span>
    </div>
    <div class="panel-footer">
        <span>Opis: @Model.OpisSushi</span>
    </div>
</div>